{
  // "out": "./src/preload/preload.js",
  "include": ["src/preload/index.ts"],
  "compilerOptions": {
    "outDir": "./src/preload/dist",
    "watch": true,
    "target": "ES2018",
    "module": "CommonJS",
    "lib": ["dom", "esnext"],
    "typeRoots": ["src/types"],
    "declaration": true,
    "declarationMap": true,
    // "noEmit": true,
    "strict": true,
    "pretty": true,
    "sourceMap": true,
    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true
    // "extendedDiagnostics": true
    // "explainFiles": true
  }
}
